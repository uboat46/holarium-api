# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (PostgreSQL)
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=admin
DATABASE_PASSWORD=admin_dev_password
DATABASE_NAME=app
DATABASE_SSL=false
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=true

# Database Connection Pool
DATABASE_POOL_SIZE=2
DATABASE_CONNECTION_TIMEOUT=3000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password
REDIS_TTL=3600

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=30d

# For RS256 (recommended for production)
# JWT_PRIVATE_KEY_PATH=./keys/private.key
# JWT_PUBLIC_KEY_PATH=./keys/public.key

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=10

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080,http://localhost:5173
CORS_CREDENTIALS=true

# Email Configuration
EMAIL_PROVIDER=console # Options: console, sendgrid, resend, mailhog
EMAIL_FROM=noreply@spiritnexus.local
SENDGRID_API_KEY=
RESEND_API_KEY=

# For development with Mailhog
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Application URLs
FRONTEND_URL=http://localhost:8080
API_URL=http://localhost:3000
AUTH_URL=http://localhost:3000

# Google Cloud Configuration (for production)
GCP_PROJECT_ID=
GCP_REGION=us-central1

# Neon Database Configuration (for production)
NEON_HOST=
NEON_USER=
NEON_PASSWORD=
NEON_DATABASE=

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090

# Logging
LOG_LEVEL=debug # Options: error, warn, info, debug, verbose
LOG_FORMAT=json # Options: json, pretty

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400000 # 24 hours in milliseconds

# OAuth Providers (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_CALLBACK_URL=http://localhost:3000/auth/discord/callback

# Feature Flags
ENABLE_2FA=false
ENABLE_OAUTH=false
ENABLE_WEBSOCKETS=false
ENABLE_SWAGGER=true

# Development Tools
PGADMIN_EMAIL=admin@dev.local
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025

ADMINER_PORT=8090

# Docker Configuration
DEBUG_PORT=9229